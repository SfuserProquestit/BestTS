<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <assignments>
        <name>Assign_Lookup_to_Service_Part</name>
        <label>Assign Lookup to Service Part</label>
        <locationX>608</locationX>
        <locationY>460</locationY>
        <assignmentItems>
            <assignToReference>sObjServicePart.Auto_Request_Part__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>varRequestPartId</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Update_Service_Part</targetReference>
        </connector>
    </assignments>
    <decisions>
        <name>Auto_reorder</name>
        <label>Auto reorder?</label>
        <locationX>610</locationX>
        <locationY>221</locationY>
        <defaultConnectorLabel>Stop</defaultConnectorLabel>
        <rules>
            <name>Reorder</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>sObjProductItem</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>sObjProductItem.Auto_Reorder__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Create_Request_Part</targetReference>
            </connector>
            <label>Reorder</label>
        </rules>
    </decisions>
    <description>Checks if a Product Item is an AutoReorder item and auto creates Request Part record</description>
    <interviewLabel>Auto Reorder of Product Item Check {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Auto Reorder of Product Item</label>
    <processType>AutoLaunchedFlow</processType>
    <recordCreates>
        <name>Create_Request_Part</name>
        <label>Create Request Part</label>
        <locationX>609</locationX>
        <locationY>346</locationY>
        <assignRecordIdToReference>varRequestPartId</assignRecordIdToReference>
        <connector>
            <targetReference>Assign_Lookup_to_Service_Part</targetReference>
        </connector>
        <inputAssignments>
            <field>Product_Name__c</field>
            <value>
                <elementReference>sObjProductItem.Product2Id</elementReference>
